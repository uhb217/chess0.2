<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_bg"
    android:elevation="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opponent offered a draw \n Do you want to agree?"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#1C1C1D"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:fontFamily="sans-serif-medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_draw_agree"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/player_info_bg"
            android:src="@drawable/baseline_thumb_up_24"
            android:contentDescription="Agree"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"
            app:tint="@android:color/holo_green_dark"/>

        <ImageButton
            android:id="@+id/btn_draw_disagree"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/player_info_bg"
            android:src="@drawable/baseline_thumb_down_24"
            android:contentDescription="Disagree"
            android:padding="12dp"
            android:scaleType="centerInside"
            app:tint="@android:color/holo_red_dark" />
    </LinearLayout>
</LinearLayout>
